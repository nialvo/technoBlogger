<div id="smallPosts">
{{#each posts as |post|}}
<div class="post" id="{{id}}" value="post">
    <div class="postHead">
        <div class="tag">{{tag}}</div>
        <div class="postTitle">{{title}}</div>
        
        <p>Posted by {{name}} on {{date_created}}</p>
        
    </div>
    <div class="postBody">
        <p class="postContent">{{content}}</p>
        <div class="postFoot"></div>
        {{#if oneComment}}
        <p>{{commentNum}} comment</p>
        {{else}}
        <p>{{commentNum}} comments</p>
        {{/if}}
        
        
        <a href="/edit/post/{{id}}">Edit or Delete Post</a>
        
            

        {{#if zeroComments}}    
            <a href="/post/{{id}}">Add Comments</a>   
        {{else}}
            <a href="/post/{{id}}">View or Add Comments</a>
        {{/if}}

    </div>
        
</div>
</div>
{{/each}}
</div>




<button id='addPost' class='addButton myButtons'>Add New Post</button>

<script src="/js/dash.js"></script>