<!--
post body with all comments
add comment button
-->

///////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
<div class="card m-3 border-info">
    <div class="card-header d-flex justify-content-between bg-info text-white">
        <div class="onePostTitle">{{post.title}}</div>
        <p class="mt-1 mb-1">Posted by {{post.author}} on {{post.date_created}}</p>
    </div>
    <div class="card-body">
        <p class="card-text text-info">{{post.content}}</p>
    </div>
</div>
<br>
<div class="accordion" id="accordionExample">
{{#each post.comments as |comment|}}
<div class="accordion-item mx-3 my-1 border border-info">
  <h2 class="accordion-header" id="heading{{id}}">
    <button
      class="accordion-button collapsed"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#collapse{{id}}"
      aria-expanded="false"
      aria-controls="collapse{{id}}"
    >
      View comment by
      {{commentor_name}}
      on
      {{date_created}}
    </button>
  </h2>
  <div
    id="collapse{{id}}"
    class="accordion-collapse collapse hide"
    aria-labelledby="heading{{id}}"
    data-bs-parent="#accordionExample"
  >
    <div class="accordion-body">
      {{content}}
    </div>
    {{!-- comment delete buttons - front end --}}
    <div class="d-flex justify-content-start mt-2 mb-2">
      <button id="update-comment" class="btn btn-success mx-3">Update</button>
      <button id="delete-comment" class="btn btn-danger mx-3">Delete</button>
    </div>
  </div>
</div>

<script src='/js/updateComment.js'></script>
{{/each}}
</div>
<br>
<form id="comment">
    <div class="form-group">
        <label class="py-2 px-3 text-info" for="exampleFormControlTextarea1"><b>Comment</b></label>
        <textarea class="form-control mx-3" id="comment-content" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-success m-3">Post Comment</button>
</form>
<script src='/js/comment.js'></script>


