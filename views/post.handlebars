<div class="post1">
    <div class="postHead">
      <div class="tag">{{post.tag}}</div>
        <div class="postTitle">{{post.title}}</div>
        
        <p>Posted by {{post.author}} on {{post.date_created}}</p>
        
    </div>
    <div class="postBody">
        <p class="postContent">{{post.content}}</p>
        {{#if post.oneComment}}
        <p>{{post.commentNum}} comment</p>
        {{else}}
        <p>{{post.commentNum}} comments</p>
        {{/if}}

        {{#if post.mine}}
          {{#if loggedIn}}
            <a href="/edit/post/{{post.id}}">Edit or Delete Post</a>
          {{/if}}
        {{/if}}
        {{#if loggedIn}}
        <a href="/new/comment/{{post.id}}">Add comment</a>

        {{/if}}

          

        
    </div>
</div>

{{#each post.comments as |comment|}}
<div class="comment">
  <div class="commentHead">
    <p>Posted by {{comment.author}} on {{comment.date_created}}</p>
  </div>
  <div class="commentBody">
    <p class="commentContent">{{comment.content}}</p>
  </div>

  
  {{#if loggedIn}}
    {{#if comment.mine}}
      {{{comment.edit}}}
    {{/if}}
  {{/if}}
</div>
{{/each}}



</form>
<script src='/js/post.js'></script>



